{% extends 'base.html.twig' %}

{% block title %}Produits index{% endblock %}

{% block body %}
    <h1>Produits index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>categorie</th>
                <th>Nom</th>
                <th>Quantite</th>
                <th>Prix</th>
                <th>fournisseur</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.id }}</td>
                <td>
                    <a href="{{ path('categories_show', {'id': produit.categorie.id}) }}">{{ produit.categorie.nom }}</a>
                </td>
                <td>{{ produit.nom }}</td>
                <td>{{ produit.quantite }}</td>
                <td>{{ produit.prix }}</td>
                <td>
                    <a href="{{ path('fournisseurs_show', {'id': produit.fournisseur.id }) }}">{{ produit.fournisseur.societe  }}</a>
                </td>
                <td>{{ produit.description }}</td>
                <td>
                    <a href="{{ path('produits_show', {'id': produit.id}) }}">show</a>
                    <a href="{{ path('produits_edit', {'id': produit.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('produits_new') }}">Create new</a>
{% endblock %}
