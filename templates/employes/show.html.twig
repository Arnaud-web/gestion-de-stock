{% extends 'base.html.twig' %}

{% block title %}Employes{% endblock %}

{% block body %}
    <h1>Employes</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ employe.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ employe.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ employe.prenom }}</td>
            </tr>
            <tr>
                <th>Fonction</th>
                <td>{{ employe.fonction }}</td>
            </tr>
            <tr>
                <th>DateDeNaissance</th>
                <td>{{ employe.dateDeNaissance ? employe.dateDeNaissance|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>DateEmbauche</th>
                <td>{{ employe.dateEmbauche ? employe.dateEmbauche|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ employe.adresse }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ employe.ville }}</td>
            </tr>
            <tr>
                <th>Mail</th>
                <td>{{ employe.mail }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('employes_index') }}">back to list</a>

